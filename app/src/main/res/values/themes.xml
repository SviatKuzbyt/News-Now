<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsNow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black_gray</item>
        <item name="dividerColor">@color/light_gray</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">@color/light_black_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="myToolbar" parent="Widget.AppCompat.ActionBar">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textColorPrimary">@color/blue</item>
    </style>
    <style name="settingToolbar" parent="Widget.AppCompat.ActionBar">
        <item name="fontFamily">@font/inter</item>
        <item name="drawerArrowStyle">@style/DrawerArrowToggle</item>
    </style>
    <style name="DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="barLength">28dp</item>
        <item name="gapBetweenBars">5dp</item>
        <item name="drawableSize">24dp</item>
    </style>
</resources>